        "chunk_size": 500,
        "chunk_overlap": 50,
        "indexed_content": [
          "Standard contract clauses",
          "Payment terms library",
          "Liquidated damages formulas",
          "Termination clauses",
          "Indemnity clauses",
          "Performance security terms",
          "Warranty clauses"
